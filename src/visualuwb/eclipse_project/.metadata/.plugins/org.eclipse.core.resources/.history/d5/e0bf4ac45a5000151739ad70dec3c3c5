#!/usr/bin/env python
from matplotlib.lines import lineStyles
from numpy import *
from pykalman import KalmanFilter
from pykalman import UnscentedKalmanFilter,AdditiveUnscentedKalmanFilter
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D
import rospy
import tf
import tf2_ros as tf2
import geometry_msgs.msg
import turtlesim.msg
import rospy
import tf2_ros
import geometry_msgs.msg
import math

if __name__ == '__main__':
    rospy.init_node('uav_tf')
    
    map = tf2.TransformBroadcaster()
    body = tf2.TransformBroadcaster()
    uwb = tf2.TransformBroadcaster()
    cam = tf2.TransformBroadcaster()
    
    map = geometry_msgs.msg.TransformStamped()
    map.header.frame_id = "ned"
    map.child_frame_id = "map"
    
    body = geometry_msgs.msg.TransformStamped()
    body.header.frame_id = "map"
    body.child_frame_id = "body"
    
    uwb = geometry_msgs.msg.TransformStamped()
    uwb.header.frame_id = "body"
    uwb.child_frame_id = "uwb"
    
    cam = geometry_msgs.msg.TransformStamped()
    cam.header.frame_id = "body"
    cam.child_frame_id = "uwb"
    
    
    map.transform.translation.x = 1
    map.transform.translation.y = 1
    map.transform.translation.z = 0.0
    map.transform.rotation.x = 0.0
    map.transform.rotation.y = 0.0
    map.transform.rotation.z = 0.0
    map.transform.rotation.w = 1.0

    rate = rospy.Rate(10.0)
    while not rospy.is_shutdown():
        
        br.sendTransform(ned_map)
        rate.sleep()
        
        x = rospy.Time.now().to_sec() * math.pi 
        map_body.header.stamp = rospy.Time.now()   
        map_body.transform.translation.x = 1 * math.sin(x)
        map_body.transform.translation.y = 1 * math.cos(x)
        map_body.transform.translation.z = 0.0
        map_body.transform.rotation.x = 0.0
        map_body.transform.rotation.y = 0.0
        map_body.transform.rotation.z = 0.0
        map_body.transform.rotation.w = 1.0
        br.sendTransform(map_body)
        rate.sleep()
        
        
        body_uwb.header.stamp = rospy.Time.now()   
        body_uwb.transform.translation.x = 0.1
        body_uwb.transform.translation.y = 0.1
        body_uwb.transform.translation.z = 0.1
        body_uwb.transform.rotation.x = 0.0
        body_uwb.transform.rotation.y = 0.0
        body_uwb.transform.rotation.z = 0.0
        body_uwb.transform.rotation.w = 1.0
        br.sendTransform(body_uwb)
        rate.sleep()
        
        body_cam.header.stamp = rospy.Time.now()   
        body_cam.transform.translation.x = -0.1
        body_cam.transform.translation.y = 0.1 
        body_cam.transform.translation.z = 0.0
        body_cam.transform.rotation.x = 0.3
        body_cam.transform.rotation.y = 0.5
        body_cam.transform.rotation.z = 0.0
        body_cam.transform.rotation.w = 0.4
        br.sendTransform(body_cam)
        rate.sleep()
        

        
