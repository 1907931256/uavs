#!/usr/bin/env python
from matplotlib.lines import lineStyles
from numpy import *
from pykalman import KalmanFilter
from pykalman import UnscentedKalmanFilter,AdditiveUnscentedKalmanFilter
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D
import rospy
import tf
import tf2_ros as tf2
import geometry_msgs.msg
import turtlesim.msg
import rospy
import tf2_ros
import geometry_msgs.msg
import math

if __name__ == '__main__':
    rospy.init_node('uav_tf')
    br = tf2.TransformBroadcaster()
    
    ned_map = geometry_msgs.msg.TransformStamped()
    ned_map.header.frame_id = "ned"
    ned_map.child_frame_id = "map"
    
    map_body = geometry_msgs.msg.TransformStamped()
    map_body.header.frame_id = "map"
    map_body.child_frame_id = "body"
    
    body_uwb = geometry_msgs.msg.TransformStamped()
    body_uwb.header.frame_id = "body"
    body_uwb.child_frame_id = "uwb"
    
    body_cam = geometry_msgs.msg.TransformStamped()
    body_cam.header.frame_id = "body"
    body_cam.child_frame_id = "uwb"
    
    

    
    ned_body.transform.translation.x = 1 * math.sin(x)
    ned_body.transform.translation.y = 1 * math.cos(x)
    ned_body.transform.translation.z = 0.0
    ned_body.transform.rotation.x = 0.0
    ned_body.transform.rotation.y = 0.0
    ned_body.transform.rotation.z = 0.0
    ned_body.transform.rotation.w = 1.0

    rate = rospy.Rate(10.0)
    while not rospy.is_shutdown():
        x = rospy.Time.now().to_sec() * math.pi
        ned_body.header.stamp = rospy.Time.now()
        
        ned.header.stamp = rospy.Time.now()
        ned.transform.translation.x = 1 * math.sin(x)
        ned.transform.translation.y = 1 * math.cos(x)
        ned.transform.translation.z = 0.0
        ned.transform.rotation.x = 0.0
        ned.transform.rotation.y = 0.0
        ned.transform.rotation.z = 0.0
        ned.transform.rotation.w = 1.0


        br.sendTransform(ned)
        rate.sleep()
        
        
